{
    "validation": {
        "id": {
            "title"   : "식별번호",
            "required": true,
            "filter"  : "chkNumber"
        }
    },

    "authority" : "{__FUNC__.chk_authority}({_DEFINE._AUTH_SUPERADMIN_LEVEL})",

    "model": {
    },

    "data":{
        "company" : {
            "query"  : "{__QUERIES__.single_query}",
            "query_type": "multiple",
            "scheme" : null,
            "params" : {
                "columns": "id,company,ceo",
                "table"  : "{__TABLES__.company}",
                "where"  : {}
            }
        },
        "info" :{
            "query"  : "{__QUERIES__.single_query}",
            "query_type": "single",
            "scheme" : {
                "id" : {
                    "type": "hidden",
                    "value" : "{__FUNC__.intval}({__DATA__.id})"
                },
                "name" : {
                    "title" : "이름"
                },
                "cellphone" : {
                    "title" : "전화번호"
                },
                "introduce" : {
                    "title" : "한줄자기소개"
                },
                "company_id" : {
                    "type": "select",
                    "title":"소속/단체",
                    "default" : "{__FUNC__.convert2SingleArray}({__DATA__.company.fetch()},{__TEXT__.id}, {__TEXT__.company})"
                },
                "extract_id" : {
                    "type" : "file",
                    "doc_id" : "adm_user",
                    "default" : "{__UPLOADABLE__.file_extension}",
                    "number_files_allowed" : "{__FUNC__.intval}({__UPLOADABLE__.number_files_allowed})",
                    "title" : "프로필이미지"
                },
                "userid" : {
                    "type" : "email",
                    "title" : "아이디(이메일)"
                },
                "is_push" : {
                    "type" : "radio",
                    "default" : "{__ARRAY__.is_push}",
                    "title":"푸시 수신 여부"
                }
            },
            "params" : {
                "columns": "id,userid,company_id,name,cellphone,introduce,is_push,extract_id",
                "table"  : "{__TABLES__.member}",
                "where"  : {
                    "id" : {
                        "condition": " = ",
                        "value"    : "{__FUNC__.intval}({__REQ__.id})",
                        "coord"    : "AND"
                    }
                }
            },
            "outmsg" : {
                "mode":"false",
                "msg_code":"e_db_unenabled",
                "msg":"e_db_unenabled"
            },

            "then" : {
                "upfiles" : {
                    "query"  : "{__QUERIES__.single_query}",
                    "query_type": "multiple",
                    "scheme" : null,
                    "params" : {
                        "columns": "id,file_type,directory,sfilename",
                        "table"  : "{__TABLES__.member_upfiles}",
                        "where"  : {
                            "extract_id": {
                                "condition": " = ",
                                "value"    : "{__DATA__.info.extract_id}",
                                "coord"    : "AND"
                            },
                            "is_regi": {
                                "condition": " = ",
                                "value"    : "1",
                                "coord"    : "AND"
                            }
                        }
                    }
                }
            }
        }
    },

    "output": {
        "result": "true",
        "scheme":"{__SCHEME__.info}",
        "msg": "{__DATA__.info.fetch()}"
    }
}