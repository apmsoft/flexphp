{
    "validation": {
        "id": {
            "title"   : "식별번호",
            "required": true,
            "filter"  : "chkNumber"
        }
    },

    "authority" : "{__FUNC__.chk_authority}({_DEFINE._AUTH_SUPERADMIN_LEVEL})",

    "model": {
    },

    "data":{
        "info" :{
            "query"  : "{__QUERIES__.single_query}",
            "query_type": "single",
            "scheme" : {
                "id" : {
                    "type" : "hidden",
                    "readonly" : "readonly"
                },
                "number" : {
                    "title" : "쿠폰번호"
                },
                "title" : {
                    "title" : "제목"
                },
                "start_date" : {
                    "type" : "datepicker",
                    "title" : "시작일"
                },
                "end_date" : {
                    "type" : "datepicker",
                    "title" : "종료일"
                },
                "summary" : {
                    "title" : "요약설명"
                },
                "ea" : {
                    "type" : "number",
                    "title" : "쿠폰발행수"
                },
                "extract_id" : {
                    "type" : "file",
                    "doc_id" : "adm_coupon",
                    "default" : "{__UPLOADABLE__.file_extension}",
                    "number_files_allowed" : "{__FUNC__.intval}({__UPLOADABLE__.number_files_allowed})",
                    "title" : "첨부파일"
                }
            },
            "params" : {
                "columns": "id,number,start_date,end_date,title,ea,summary,extract_id",
                "table"  : "{__TABLES__.coupon}",
                "where"  : {
                    "id" : {
                        "condition": " = ",
                        "value"    : "{__FUNC__.intval}({__REQ__.id})",
                        "coord"    : "AND"
                    }
                }
            },
            "outmsg" : {
                "mode":"false",
                "msg_code":"e_db_unenabled",
                "msg":"e_db_unenabled"
            },

            "then" : {
                "upfiles" : {
                    "query"  : "{__QUERIES__.single_query}",
                    "query_type": "single",
                    "scheme" : null,
                    "params" : {
                        "columns": "id,file_type,directory,sfilename",
                        "table"  : "{__TABLES__.coupon_upfiles}",
                        "where"  : {
                            "extract_id": {
                                "condition": " = ",
                                "value"    : "{__DATA__.info.extract_id}",
                                "coord"    : "AND"
                            },
                            "is_regi": {
                                "condition": " = ",
                                "value"    : "1",
                                "coord"    : "AND"
                            }
                        }
                    }
                }
            }
        }
    },

    "output": {
        "result": "true",
        "scheme":"{__SCHEME__.info}",
        "msg": "{__DATA__.info.fetch()}"
    }
}