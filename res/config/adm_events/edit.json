{
    "validation": {
        "id": {
            "title"   : "식별번호",
            "required": true,
            "filter"  : "chkNumber"
        }
    },

    "authority" : "{__FUNC__.chk_authority}({_DEFINE._AUTH_SUPERADMIN_LEVEL})",

    "model": {
    },

    "data":{
        "info" :{
            "query"  : "{__QUERIES__.single_query}",
            "query_type": "single",
            "scheme" : {
                "id" : {
                    "type" : "hidden",
                    "readonly" : "readonly"
                },
                "category" : {
                    "type" : "select",
                    "title" : "카테고리",
                    "default" : "{__ARRAY__.device_category}"
                },
                "title" : {
                    "title" : "제목"
                },
                "postcode" : {
                    "type" : "daum_postcodemap",
                    "title" : "우편번호"
                },
                "address1" : {
                    "readonly" : "readonly",              
                    "title" : "주소"
                },
                "address2" : {
                    "title" : "상세주소"
                },
                "lat" : {
                    "type" : "hidden"
                },
                "lon" : {
                    "type" : "hidden"
                },
                "start_date" : {
                    "type" : "datepicker",
                    "title" : "시작일",
                    "value" : "{__FUNC__.date}({__TEXT__.Y-m-d})"
                },
                "end_date" : {
                    "type" : "datepicker",
                    "title" : "종료일"
                },
                "description" : {
                    "title" : "내용",
                    "type" : "textarea"
                },
                "extract_id" : {
                    "type" : "file",
                    "doc_id" : "adm_events",
                    "default" : "{__UPLOADABLE__.file_extension}",
                    "number_files_allowed" : "{__FUNC__.intval}({__UPLOADABLE__.number_files_allowed})",
                    "title" : "첨부파일"
                }
            },
            "params" : {
                "columns": "id,category,title,postcode,address1,address2,lat,lon,start_date,end_date,description,extract_id",
                "table"  : "{__TABLES__.events}",
                "where"  : {
                    "id" : {
                        "condition": " = ",
                        "value"    : "{__FUNC__.intval}({__REQ__.id})",
                        "coord"    : "AND"
                    }
                }
            },
            "outmsg" : {
                "mode":"false",
                "msg_code":"e_db_unenabled",
                "msg":"e_db_unenabled"
            },

            "then" : null
        }
    },

    "output": {
        "result": "true",
        "scheme":"{__SCHEME__.info}",
        "msg": "{__DATA__.info.fetch()}"
    }
}