{
    "validation": {
        "id": {
            "title"   : "식별번호",
            "required": true,
            "filter"  : "chkNumber"
        },
        "evtid": {
            "title"   : "이벤트",
            "required": true,
            "filter"  : "chkNumber"
        }
    },

    "authority" : "{__FUNC__.chk_authority}({_DEFINE._AUTH_SUPERADMIN_LEVEL})",

    "model": {
    },

    "data":{
        "info" :{
            "query"  : "{__QUERIES__.single_query}",
            "query_type": "single",
            "scheme" : {
                "id" : {
                    "type" : "hidden",
                    "readonly" : "readonly"
                },
                "sortno" : {
                    "type" : "select",
                    "default":"{__ARRAY__.misson_sortno}",
                    "title" : "순번"
                },
                "msg" : {
                    "type" : "textarea",
                    "title" : "메세지"
                },
                "description" : {
                    "title" : "내용",
                    "type" : "textarea"
                },
                "linkurl" : {
                    "title" : "링크"
                },
                "extract_id" : {
                    "type" : "file",
                    "doc_id" : "adm_misson",
                    "default" : "{__UPLOADABLE__.file_extension}",
                    "number_files_allowed" : "{__FUNC__.intval}({__UPLOADABLE__.number_files_allowed})",
                    "title" : "첨부파일"
                },
                "coupon" : {
                    "title" : "쿠폰",
                    "readonly" : "readonly"
                },
                "misson_way" : {
                    "type" : "radio",
                    "title" : "미션조건",
                    "default" : "{__ARRAY__.misson_category}"
                },
                "misson_token":{
                    "type" : "hidden"
                }
            },
            "params" : {
                "columns": "id,sortno,msg,description,linkurl,extract_id,coupon,misson_way,misson_token",
                "table"  : "{__TABLES__.misson}",
                "where"  : {
                    "id" : {
                        "condition": " = ",
                        "value"    : "{__FUNC__.intval}({__REQ__.id})",
                        "coord"    : "AND"
                    },
                    "evtid" : {
                        "condition": " = ",
                        "value"    : "{__FUNC__.intval}({__REQ__.evtid})",
                        "coord"    : "AND"
                    }
                }
            },
            "outmsg" : {
                "mode":"false",
                "msg_code":"e_db_unenabled",
                "msg":"e_db_unenabled"
            },

            "then" : {
                "misson_way_data" : {
                    "query"  : "{__QUERIES__.single_query}",
                    "query_type": "single",
                    "scheme" : null,
                    "params" : {
                        "columns": "*",
                        "table"  : "{__FUNC__.stringMerge}({__TEXT__.fu3_misson_},{__DATA__.list.misson_way},{__TEXT__.})",
                        "where"  : {
                            "misson_token": {
                                "condition": " = ",
                                "value"    : "{__DATA__.list.misson_token}",
                                "coord"    : "AND"
                            }
                        }
                    }
                }
            }
        }
    },

    "output": {
        "result": "true",
        "scheme":"{__SCHEME__.info}",
        "msg": "{__DATA__.info.fetch()}"
    }
}