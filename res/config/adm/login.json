{
    "validation": {
        "userid": {
            "title"   : "아이디(이메일)",
            "required": true,
            "filter"  : "chkEmail"
        },
        "passwd": {
            "title"   : "비밀번호",
            "required": true,
            "filter"  : "chkPasswd"
        }
    },

    "authority" : "0",

    "model": {
        "superadmin" : true
    },

    "data":{
        "info" :{
            "query"  : "{__QUERIES__.login_adm_query}",
            "query_type": "single",
            "scheme" : null,
            "params" : {
                "columns": "id,userid,passwd,name,level,allow_ipall,allow_ip1,allow_ip2,allow_ip3,allow_mobile",
                "table"  : "{__TABLES__.admmem}",
                "userid"  :"{__REQ__.userid}",
                "passwd" : "{__FUNC__.password}({__REQ__.passwd})",
                "level" : "{_DEFINE._AUTH_SUPERADMIN_LEVEL}"
            },
            "outmsg" : {
                "mode":"false",
                "msg_code":"w_enter_userid_passwd",
                "msg":"w_enter_userid_passwd"
            },
            "then" : {
                "update" : {
                    "query"  : null,
                    "query_type": "update",
                    "scheme" : {
                        "recently_connect_date" : {
                            "value" : "{__FUNC__.time}()"
                        }
                    },
                    "params" : {
                        "table"  : "{__TABLES__.admmem}",
                        "where"  : {
                            "userid": {
                                "condition": "=",
                                "value"    : "{__REQ__.userid}",
                                "coord"    : "AND"
                            }
                        }
                    }
                }
            }
        }
    },

    "output": {
        "result": "true",
        "id": "{__DATA__.id}",
        "msg"   : "{__SYSMSG__.v_login}"
    }
}