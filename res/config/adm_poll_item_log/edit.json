{
    "validation": {
        "pitem_id": {
            "title"   : "식별번호",
            "required": true,
            "filter"  : "chkNumber"
        },
        "poll_id": {
            "title"   : "설문조사",
            "required": true,
            "filter"  : "chkNumber"
        }
    },

    "authority" : "{__FUNC__.chk_authority}({_DEFINE._AUTH_SUPERADMIN_LEVEL})",

    "model": {
    },

    "data":{
        "info" :{
            "query"  : "{__QUERIES__.single_query}",
            "query_type": "single",
            "scheme" : {
                "pitem_id" : {
                    "type" : "hidden"
                },
                "pitem_num" : {
                    "type" : "integer",
                    "title" : "순번*"
                },
                "pitem_type" : {
                    "type" : "radio",
                    "title" : "문항타입*",
                    "default":"{__ARRAY__.poll_pitem_type}"
                },
                "pitem_title" : {
                    "title" : "제목*"
                },
                "q1":{
                    "title": "문항1"
                },
                "q2":{
                    "title": "문항2"
                },
                "q3":{
                    "title": "문항3"
                },
                "q4":{
                    "title": "문항4"
                },
                "q5":{
                    "title": "문항5"
                },
                "q6":{
                    "title": "문항6"
                },
                "q7":{
                    "title": "문항7"
                },
                "q8":{
                    "title": "문항8"
                },
                "q9":{
                    "title": "문항9"
                },
                "q10":{
                    "title": "문항10"
                }
            },
            "params" : {
                "columns": "pitem_id,pitem_num,pitem_type,pitem_title,q1,q2,q3,q4,q5,q6,q7,q8,q9,q10",
                "table"  : "{__TABLES__.poll_item}",
                "where"  : {
                    "pitem_id" : {
                        "condition": " = ",
                        "value"    : "{__REQ__.pitem_id}",
                        "coord"    : "AND"
                    },
                    "poll_id" : {
                        "condition": " = ",
                        "value"    : "{__REQ__.poll_id}",
                        "coord"    : "AND"
                    }
                }
            },
            "outmsg" : {
                "mode":"false",
                "msg_code":"e_db_unenabled",
                "msg":"e_db_unenabled"
            },

            "then" : null
        }
    },

    "output": {
        "result": "true",
        "scheme":"{__SCHEME__.info}",
        "msg": "{__DATA__.info.fetch()}"
    }
}