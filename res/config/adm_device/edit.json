{
    "validation": {
        "id": {
            "title"   : "식별번호",
            "required": true,
            "filter"  : "chkNumber"
        }
    },

    "authority" : "{__FUNC__.chk_authority}({_DEFINE._AUTH_SUPERADMIN_LEVEL})",

    "model": {
    },

    "data":{
        "info" :{
            "query"  : "{__QUERIES__.single_query}",
            "query_type": "single",
            "scheme" : {
                "id" : {
                    "type" : "hidden",
                    "readonly" : "readonly"
                },
                "category" : {
                    "type" : "select",
                    "title" : "카테고리",
                    "default" : "{__ARRAY__.device_category}"
                },
                "dvmac" : {
                    "title" : "맥주소"
                },
                "title" : {
                    "title" : "제목"
                },
                "postcode" : {
                    "type" : "daum_postcodemap",
                    "title" : "우편번호"
                },
                "address1" : {
                    "readonly" : "readonly",              
                    "title" : "주소"
                },
                "address2" : {
                    "title" : "상세주소"
                },
                "lat" : {
                    "type" : "hidden",
                    "value" : "{__FUNC__.floatval}({__DATA__.lat})"
                },
                "lon" : {
                    "type" : "hidden",
                    "value" : "{__FUNC__.floatval}({__DATA__.lon})"
                }
            },
            "params" : {
                "columns": "id,category,dvmac,title,postcode,address1,address2,lat,lon",
                "table"  : "{__TABLES__.device}",
                "where"  : {
                    "id" : {
                        "condition": " = ",
                        "value"    : "{__FUNC__.intval}({__REQ__.id})",
                        "coord"    : "AND"
                    }
                }
            },
            "outmsg" : {
                "mode":"false",
                "msg_code":"e_db_unenabled",
                "msg":"e_db_unenabled"
            },

            "then" : null
        }
    },

    "output": {
        "result": "true",
        "scheme":"{__SCHEME__.info}",
        "msg": "{__DATA__.info.fetch()}"
    }
}